@model EmDica.Web.Models.LogModel

@{
    ViewBag.Title = "Leads";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<string> logLines = (List<string>)ViewBag.LogLines;
}

<div class="text-center">
    <h3 class="page-header">
        Controle de Log da Aplicação
    </h3>
</div>

