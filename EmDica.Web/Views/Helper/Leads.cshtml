<!-- Mensagens de validação -->
@if (ViewBag.MensagemValidacao != null && !string.IsNullOrEmpty(ViewBag.MensagemValidacao))
{
    <div id="divValidacao" class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>Atenção!</strong>&nbsp; @ViewBag.MensagemValidacao
        <br />
    </div>
}


@if (logLines != null && logLines.Count() > 0)
{
    <div>
        <table class="table table-striped">
            @foreach (var item in logLines)
            {
                <tr>
                    <td>
                        @item
                    </td>
                </tr>
            }
        </table>
    </div>
}

@section scripts {
    <script>
            $(document).ready(function () {
                $("#DataGeracao").inputmask("mask", { "mask": "99/99/9999" });
            });
    </script>
}