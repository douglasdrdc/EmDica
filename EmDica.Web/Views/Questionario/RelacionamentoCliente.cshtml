@model EmDica.Web.Models.AvaliacaoHipoteseModel

@{
    ViewBag.Title = "RelacionamentoCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <h2>
        Relacionamento entre empreendedor e cliente
    </h2>

    <hr />

    @if (ViewBag.MensagemSucesso != null)
    {
        <div class="alert alert-success" role="alert">
            <span> @ViewBag.MensagemSucesso </span>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <a href="http://emdica.com.br/" class="btn btn-primary">Conheça nosso Blog</a>
            </div>
        </div>
    }
    else
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.Email)

                <div class="form-group">                    
                        @Html.LabelFor(model => model.TipoPessoa, htmlAttributes: new { @class = "control-label col-md-4" })                    
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.TipoPessoa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TipoPessoa, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ProblemasOcorridos, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.ProblemasOcorridos, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ProblemasOcorridos, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TratativaProblemasOcorridos, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.TratativaProblemasOcorridos, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TratativaProblemasOcorridos, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PropostaMelhoria, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.PropostaMelhoria, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PropostaMelhoria, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Finalizar" class="btn btn-primary btn-lg" />
                    </div>
                </div>
            </div>
        }
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
